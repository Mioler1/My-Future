<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.My_Future" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/for_button</item>
        <item name="colorPrimaryVariant">@color/for_button</item>
        <item name="colorOnPrimary">#d7ddcf</item>
        <item name="colorControlActivated">@color/custom</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="intScreen">
        <item name="backgroundColor">@color/custom</item>
    </style>

    <style name="Theme.MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/for_button</item>
    </style>

    <style name="Theme.MyAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@color/invisible</item>
    </style>
    //
    <style name="Theme.SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/fon</item>
    </style>
</resources>