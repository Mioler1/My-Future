<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatar_change"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/fon" />

        <EditText
            android:id="@+id/email_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите новый email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/password_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите новый пароль"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/repeat_password_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Повторите новый пароль"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/nickname_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите новый ник"
            android:inputType="text" />

        <EditText
            android:id="@+id/weight_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите новый вес"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/target_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickSaveProfileData"
            android:text="Сохранить" />

    </LinearLayout>

    <!--  Невидимый текст  -->
    <TextView
        android:id="@+id/visible_text_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>