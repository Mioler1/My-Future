<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/f1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/yanone_kaffeesatz"
            android:gravity="center|start"
            android:paddingStart="15dp"
            android:text="@string/profile"
            android:textColor="#ffffff"
            android:textSize="34sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_settings_32"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/f1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/tab_indicator_gray"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mein"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header">

        <RelativeLayout
            android:id="@+id/profileRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="30dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:src="@drawable/default_avatar"/>

            <TextView
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/avatar"
                android:textSize="24dp"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_below="@id/nickname"
                android:layout_toEndOf="@id/avatar"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto"/>

        </RelativeLayout>

        <Button
            android:id="@+id/click"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/profileRel"
            android:text="Изменить данные"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_setting"/>

        <View
            android:id="@+id/boo"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/click"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/tab_indicator_gray"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/boo"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/Label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вес"/>
                <TextView
                    android:id="@+id/weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"/>
            </RelativeLayout>



        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>