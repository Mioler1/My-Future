<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@color/custom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingBottom="20dp"
        android:paddingHorizontal="25dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_change"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_dark"
            android:visibility="gone"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

        <EditText
            android:id="@+id/email_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Введите новый email"
            android:inputType="textEmailAddress"
            android:background="@drawable/border_for_edittext"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:visibility="gone" />

        <EditText
            android:id="@+id/old_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_for_edittext"
            android:hint="Введите старый пароль"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:visibility="gone" />

        <EditText
            android:id="@+id/password_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_for_edittext"
            android:hint="Введите новый пароль"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:visibility="gone" />

        <EditText
            android:id="@+id/repeat_password_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:hint="Повторите новый пароль"
            android:inputType="textPassword"
            android:background="@drawable/border_for_edittext"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:visibility="gone" />

        <EditText
            android:id="@+id/nickname_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Введите новый ник"
            android:inputType="text"
            android:background="@drawable/border_for_edittext"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:visibility="gone" />

        <EditText
            android:id="@+id/weight_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Введите новый вес"
            android:inputType="numberDecimal"
            android:background="@drawable/border_for_edittext"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/target_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_for_edittext"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <Button
            android:id="@+id/butSaveChangeDate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_setting"
            android:text="Сохранить"
            android:textColor="@color/white" />

    </LinearLayout>

    <!--  Невидимый текст  -->
    <TextView
        android:id="@+id/visible_text_target_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>