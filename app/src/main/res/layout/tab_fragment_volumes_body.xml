<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom">

    <RelativeLayout
        android:id="@+id/RelRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/weight_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weight"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/weight_text"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/growth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weight_text"
            android:text="Рост:"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/growth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weight"
            android:layout_toEndOf="@id/growth_text"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/neck_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/growth"
            android:text="Шея: "
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/neck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/growth"
            android:layout_toEndOf="@id/neck_text"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/biceps_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/neck_text"
            android:text="Бицепс: "
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/biceps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/neck"
            android:layout_toEndOf="@id/biceps_text"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/forearm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/biceps_text"
            android:text="Предплечье: "
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/forearm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/biceps"
            android:layout_toEndOf="@id/forearm_text"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/chest_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forearm_text"
            android:text="Грудь: "
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/chest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forearm"
            android:layout_toEndOf="@id/chest_text"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/waist_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chest_text"
            android:text="Талия: "
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/waist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chest"
            android:layout_toEndOf="@id/waist_text"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/hip_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/waist_text"
            android:text="Бедро: "
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/hip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/waist"
            android:layout_toEndOf="@id/hip_text"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/shin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hip_text"
            android:text="Голень: "
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/shin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hip"
            android:layout_toEndOf="@id/shin_text"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/but_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Объёмы тела"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_circle_plus"
            android:src="@drawable/plus" />

    </RelativeLayout>

</RelativeLayout>