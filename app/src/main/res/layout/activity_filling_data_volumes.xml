<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom"
    tools:context=".FillingDataVolumesActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/yanone_kaffeesatz"
        android:gravity="center|start"
        android:paddingStart="15dp"
        android:text="@string/titleFilling"
        android:textColor="#ffffff"
        android:textSize="34sp" />

    <View
        android:id="@+id/viewHeader"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/header"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/tab_indicator_gray" />

    <RelativeLayout
        android:id="@+id/AutoLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_login"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        android:paddingEnd="30dp"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:id="@+id/addDataRel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text="Данные можно сохранять по отдельности"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/Liner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/custom"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/custom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/waist"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Введите объем талии (см)"
                        android:inputType="numberDecimal"
                        android:paddingStart="12dp"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:boxStrokeColor="@color/custom"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/custom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/neck"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Введите объем шеи (см)"
                        android:inputType="numberDecimal"
                        android:paddingStart="12dp"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:boxStrokeColor="@color/custom"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/custom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/chest"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Введите объем груди (см)"
                        android:inputType="numberDecimal"
                        android:paddingStart="12dp"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:boxStrokeColor="@color/custom"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/custom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/biceps"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Введите объем бицепса (см)"
                        android:inputType="numberDecimal"
                        android:paddingStart="12dp"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:boxStrokeColor="@color/custom"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/custom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/forearm"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Введите объем предплечья (см)"
                        android:inputType="numberDecimal"
                        android:paddingStart="12dp"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:boxStrokeColor="@color/custom"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/custom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/hip"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Введите объем бедра (см)"
                        android:inputType="numberDecimal"
                        android:paddingStart="12dp"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:boxStrokeColor="@color/custom"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/custom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/shin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Введите объем голени (см)"
                        android:inputType="numberDecimal"
                        android:paddingStart="12dp"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Liner2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_save_actived"
                android:fontFamily="@font/roboto"
                android:onClick="onClickSaveDataVolume"
                android:text="@string/save"
                android:textColor="@color/white" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBarVolume"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>