<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom"
    tools:context=".FillingDataVolumesActivity">

    <TextView
        android:id="@+id/f1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/yanone_kaffeesatz"
        android:gravity="center|start"
        android:paddingStart="15dp"
        android:text="@string/titleFilling"
        android:textColor="#ffffff"
        android:textSize="34sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/f1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/tab_indicator_gray" />

    <RelativeLayout
        android:id="@+id/AutoLayout2"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="70dp"
        android:background="@drawable/shape_login"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="30dp">

        <RelativeLayout
            android:id="@+id/addDataRel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Данные можно сохранять по отдельности"
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/Liner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/waist"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Введите объем талии"
                    android:inputType="numberDecimal"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/neck"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Введите объем шеи"
                    android:inputType="numberDecimal"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/chest"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Введите объем груди"
                    android:inputType="numberDecimal"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/biceps"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Введите объем бицепса"
                    android:inputType="numberDecimal"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/forearm"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Введите объем предплечья"
                    android:inputType="numberDecimal"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/hip"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Введите объем бедра"
                    android:inputType="numberDecimal"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/shin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Введите объем голени"
                    android:inputType="numberDecimal"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            </LinearLayout>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Liner2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_save_actived"
                android:fontFamily="@font/roboto"
                android:onClick="onClickSaveDataVolume"
                android:text="@string/save"
                android:textColor="@color/white" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBarVolume"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>