<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.My_Future" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/for_button</item>
        <item name="colorPrimaryVariant">@color/for_button</item>
        <item name="colorOnPrimary">#d7ddcf</item>
        <item name="colorControlActivated">@color/custom</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    // Загрузочный экран
    <style name="Theme.SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/fon</item>
    </style>

    // Модальное окно
    <style name="Theme.MyAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@color/invisible</item>
    </style>

    // RadioButton
    <style name="Theme.MyRadioButton" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/for_button</item>
    </style>

    // CheckBox
    <style name="Theme.MyCheckBox" parent="Theme.MaterialComponents.DayNight">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/for_button</item>
    </style>

    // Toolbar
    <style name="Theme.MyToolbar" parent="Theme.My_Future">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>
    <style name="TextSizeToolbar" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/yanone_kaffeesatz</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>